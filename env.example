# LingEcho 环境变量配置示例
# 复制此文件为 .env 并修改相应的配置值

# ===================
# 基础配置
# ===================
APP_ENV=development
MODE=dev
ADDR=:7072

# 服务器信息配置（可选）
MACHINE_ID=1
SERVER_NAME=LingEcho
SERVER_DESC=AI Voice Assistant Platform
SERVER_URL=http://localhost:7072
SERVER_LOGO=
SERVER_TERMS_URL=

# ===================
# 数据库配置
# ===================
# SQLite 配置（默认）
DB_DRIVER=sqlite
DSN=./ling.db

# PostgreSQL 配置（生产环境推荐）
# DB_DRIVER=postgres
# DSN=postgres://lingecho:your-password@localhost:5432/lingecho?sslmode=disable

# MySQL 配置
# DB_DRIVER=mysql
# DSN=root:password@tcp(localhost:3306)/lingsip_db?charset=utf8mb4&parseTime=True&loc=Local

# ===================
# LLM配置 (大语言模型)
# ===================
# LLM服务提供商 (openai, qwen, claude, etc.)
LLM_PROVIDER=qwen
LLM_API_KEY=your-llm-api-key
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen-plus
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# OpenAI配置示例
# LLM_PROVIDER=openai
# LLM_API_KEY=sk-your-openai-api-key
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-3.5-turbo

# ===================
# ASR配置 (语音识别)
# ===================
# ASR服务提供商 (qcloud, google, qiniu, etc.)
ASR_PROVIDER=qcloud
ASR_APP_ID=your-app-id
ASR_SECRET_ID=your-secret-id
ASR_SECRET_KEY=your-secret-key
ASR_REGION=ap-beijing
ASR_MODEL_TYPE=8k_zh
ASR_LANGUAGE=zh-CN

# 腾讯云ASR配置示例
# ASR_PROVIDER=qcloud
# ASR_APP_ID=1234567890
# ASR_SECRET_ID=AKID...
# ASR_SECRET_KEY=your-secret-key
# ASR_MODEL_TYPE=8k_zh

# Google ASR配置示例
# ASR_PROVIDER=google
# ASR_LANGUAGE=zh-CN

# 七牛云ASR配置示例
# ASR_PROVIDER=qiniu
# ASR_SECRET_ID=your-access-key
# ASR_SECRET_KEY=your-secret-key

# ===================
# TTS配置 (语音合成)
# ===================
# TTS服务提供商 (qcloud, baidu, aws, google, etc.)
TTS_PROVIDER=qcloud
TTS_APP_ID=your-app-id
TTS_SECRET_ID=your-secret-id
TTS_SECRET_KEY=your-secret-key
TTS_REGION=ap-beijing
TTS_VOICE_TYPE=601002
TTS_SAMPLE_RATE=8000
TTS_CODEC=pcm
TTS_LANGUAGE=zh-CN

# 腾讯云TTS配置示例
# TTS_PROVIDER=qcloud
# TTS_APP_ID=1234567890
# TTS_SECRET_ID=AKID...
# TTS_SECRET_KEY=your-secret-key
# TTS_VOICE_TYPE=601002  # 标准女声
# TTS_SAMPLE_RATE=8000   # 电话音质
# TTS_CODEC=pcm

# 百度TTS配置示例
# TTS_PROVIDER=baidu
# TTS_APP_ID=your-app-id
# TTS_SECRET_ID=your-api-key
# TTS_SECRET_KEY=your-secret-key
# TTS_VOICE_TYPE=0       # 度小美
# TTS_SAMPLE_RATE=8000

# AWS TTS配置示例
# TTS_PROVIDER=aws
# TTS_SECRET_ID=your-access-key
# TTS_SECRET_KEY=your-secret-key
# TTS_REGION=us-east-1
# TTS_VOICE_TYPE=Zhiyu   # 中文女声
# TTS_CODEC=pcm

# ===================
# SIP中继配置
# ===================
# Twilio SIP中继配置
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_SIP_DOMAIN=your-domain.sip.twilio.com
TWILIO_SIP_USERNAME=your-sip-username
TWILIO_SIP_PASSWORD=your-sip-password

# ===================
# 邮件配置
# ===================
MAIL_HOST=smtp.example.com
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_PORT=587
MAIL_FROM=noreply@example.com

# ===================
# 日志配置
# ===================
LOG_LEVEL=info
LOG_FILENAME=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=5
LOG_DAILY=true

# ===================
# 中间件配置
# ===================
ENABLE_RATE_LIMIT=true
ENABLE_TIMEOUT=true
ENABLE_CIRCUIT_BREAKER=false
ENABLE_OPERATION_LOG=true

# 限流配置
RATE_LIMIT_GLOBAL_RPS=2000
RATE_LIMIT_GLOBAL_BURST=4000
RATE_LIMIT_USER_RPS=200
RATE_LIMIT_USER_BURST=400
RATE_LIMIT_IP_RPS=100
RATE_LIMIT_IP_BURST=200

# 超时配置
DEFAULT_TIMEOUT=30s

# 熔断器配置
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT=30s
CIRCUIT_BREAKER_OPEN_TIMEOUT=30s
CIRCUIT_BREAKER_MAX_CONCURRENT=200